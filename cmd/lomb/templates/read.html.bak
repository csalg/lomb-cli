<!DOCTYPE html>
<html lang="en">

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" rel="stylesheet">
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Read</title>

    <style>
        a { text-decoration: none; }
        i { padding: 0.2em; }
        ul { list-style: none; }
        body { padding: 1em 2em; }
        th {
            text-align: left;
            padding: 0.5em 1em;
        }
        .container {
            display: flex;
            height: 100vh;
            width: 100vw;
        }
        .sub-container {
            overflow-y: scroll;
            width: 33%;
        }
        .sidebar {
            width: 60%;
        }
        .sidebar-section {
            width: 100%;
            height: 50%;
        }
    </style>
</head>

<body>
    <div class="container">
        <div>
            {{ range .Paragraphs }}
                <p>{{ range . }}</p>
                    <span class="chunk">{{ .Sentence }}</span>
                {{ end }}
                </p>
            {{ end }}
        </div>
    </div>
</body>

<script>
    // OnClik chunk call '/translate' with {sentence: chunk.textContent}
    // and print response
    const chunks = document.querySelectorAll('.chunk');
    chunks.forEach(chunk => {
        chunk.addEventListener('click', async () => {
            const response = await fetch('/translate', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ sentence: chunk.textContent })
            });
            const data = await response.json();
            chunk.textContent = data.translation;
        }); 
    });
</script>

</html>
